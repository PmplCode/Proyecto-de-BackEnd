{{> header usuario}}

<body id="bodyprincipal"></body>
<h1>editar perfil</h1>


<form action="/editarPerfil" method="POST" enctype="multipart/form-data">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="username"
            autocomplete="off" value="{{usuario.username}}">
        <label for="floatingInput">Editar nombre de usuario</label>
    </div>
    <div class="form-group">
        <label>Descripción
            <textarea name="descripcion" autocomplete="off" cols="30" rows="4" class="form-control">{{usuario.descripcion}}</textarea>
        </label>
    </div>
   
    <div class="form-group">
        <label>Editar foto de perfil:
            <input type="file" name="perfil-cover-image" class="form-control-file"/>
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Editar perfil</button>
</form>
<form>
    <input type="button" class="btn btn-light text-black h6 mt-3" value="Volver atrás" onclick="history.back()">
</form>

</body>